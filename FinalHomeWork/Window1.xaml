<Window x:Class="FinalHomeWork.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinalHomeWork"
        mc:Ignorable="d"
        Title="Work_Plan" Height="450" Width="800" Background="Black">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="31*"/>
        </Grid.ColumnDefinitions>
        <DataGrid x:Name="ToDoList" FontSize="16" FontWeight="Black" Margin="10" Grid.ColumnSpan="2">
            <DataGrid.Columns>
                <DataGridTextColumn IsReadOnly="False" Header="CreationDate" Width="180"/>
                <DataGridCheckBoxColumn IsReadOnly="True" Header="Done" Width="80"/>
                <DataGridTextColumn IsReadOnly="True" Header ="Task" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
